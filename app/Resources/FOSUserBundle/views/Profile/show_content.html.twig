{% trans_default_domain 'FOSUserBundle' %}

<div id='main' role='main'>
    <div id='main-content-header'>
        <div class='container'>
            <div class='row'>
                <div class='col-sm-12'>
                    <h1 class='title'>
                        {{ user.username }}
                        {#<small>Connectez-vous c'est plus vite</small>#}
                    </h1>
                </div>
            </div>
        </div>
    </div>
<div id="main-content">
    <div class="container">
        <div class="row">

            <div class="fos_user_user_show">
                <div class="col-md-2 well">{{ 'profile.show.username'|trans }}: </div>
                <p class="col-md-10"><mark>{{ user.username }}</mark></p>
            </div>
        </div>
        <div class="row">
        <div class="fos_user_user_show">
                <div class="well col-md-2">{{ 'profile.show.email'|trans }}: </div>
                <p><mark>{{ user.email }}</mark></p>
            </div>

        </div>
    </div>
</div>
</div>