{% extends '::layout/layoutAdmin.html.twig' %}
{% block body -%}
    <div id="main" role="main">
        <div id="main-content-header">
            <div class="container">
                <div class="row">
                    <div class='col-sm-12'>
                        <h1 class='title'>
                            Liste des machines
                            {#<small>Connectez-vous c'est plus vite</small>#}
                        </h1>
                    </div>
                </div>
            </div>
        </div>
        <div id="main-content">

            <div class="container">
                <div class="row">
                    <div class="input-group">
                        <table class="records_list">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nomm</th>
                                <th>Infogenerale</th>
                                <th>Surface</th>
                                <th>Resolution</th>
                                <th>Precisionm</th>
                                <th>Logicielu</th>
                                <th>Formatfich</th>
                                <th>Materiauxu</th>
                                <th>Puissance</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('adminMachines_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.nomM }}</td>
                                    <td>{{ entity.infogenerale }}</td>
                                    <td>{{ entity.surface }}</td>
                                    <td>{{ entity.resolution }}</td>
                                    <td>{{ entity.precisionm }}</td>
                                    <td>{{ entity.logicielu }}</td>
                                    <td>{{ entity.formatfich }}</td>
                                    <td>{{ entity.materiauxu }}</td>
                                    <td>{{ entity.puissance }}</td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('adminMachines_show', { 'id': entity.id }) }}">Afficher</a>
                                            </li>
                                            <li>
                                                <a href="{{ path('adminMachines_edit', { 'id': entity.id }) }}">Modifier</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <ul>
                            <li>
                                <a href="{{ path('adminMachines_new') }}">
                                    Ajouter une nouvelle machine
                                </a>
                            </li>
                        </ul>
                        {#<input type="text" class="form-control input-lg" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" title="Votre e-mail" name="email" required>#}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endblock %}


