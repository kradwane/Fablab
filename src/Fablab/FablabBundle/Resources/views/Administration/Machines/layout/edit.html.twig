{% extends '::layout/layoutAdmin.html.twig' %}
{% block body -%}
<div id="main" role="main">
    <div id="main-content-header">
        <div class="container">
            <div class="row">
                <div class='col-sm-12'>
                    <h1 class='title'>
                        Editer mes Machines
                        {#<small>Connectez-vous c'est plus vite</small>#}
                    </h1>
                </div>
            </div>
        </div>
    </div>


    <div id="main-content">

        <div class="container">
            <div class="row">
                <div class="input-group">
                    <form action="{{ path('adminMachines_update', {'id': entity.id}) }}" method="post" {{ form_enctype(edit_form) }} >
                    {{ form(edit_form) }}
                    </form>


                </div>

                <ul class="record_actions">
                    <li>
                        <a href="{{ path('adminMachines') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>

            </div>

        </div>
    </div>
</div>

{% endblock %}





